						        	<div ng-show='image.showImage0 && !scrolling' class='hover-menu-wrapper fade-out'>
										<div class='share-on-list'>
										</div>
										<a href='' ng-href='{{ image.images[0].entryUrl }}' target='_blank' class='block-fill pct-entry-sm-link' pct-image-link>
											<span class='image-source'><span class='black'>{{ image.images[0].entryPublishDate|timeAgo }}</span> {{ image.images[0].entryTitle }}</span>
										</a>
